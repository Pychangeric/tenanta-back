<%= form_for(:admin, url: admin_registration_path) do |f| %>
  <!-- Standard Devise email and password fields -->
  <%= f.email_field :email, placeholder: 'Email' %>
  <%= f.password_field :password, placeholder: 'Password' %>
  <%= f.password_field :password_confirmation, placeholder: 'Confirm Password' %>

  <!-- Additional fields for admin registration -->
  <%= f.text_field :first_name, required: true, placeholder: 'First Name' %>
  <%= f.text_field :last_name, required: true, placeholder: 'Last Name' %>
  <%= f.text_field :phone_number, required: true, placeholder: 'Phone Number' %>
  <%= f.text_field :national_id, required: true, placeholder: 'National ID' %>
  <%= f.select :gender, options_for_select(['Male', 'Female']), prompt: 'Select gender', required: true, placeholder: 'Gender' %>

  <%= f.submit 'Sign up' %>
<% end %>
