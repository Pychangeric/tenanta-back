<!-- Google Maps Link -->
<img src="<%= "https://maps.googleapis.com/maps/api/staticmap?center=#{@residence.latitude},#{@residence.longitude}&zoom=13&size=600x300&maptype=roadmap&markers=color:red%7Clabel:R%7C#{@residence.latitude},#{@residence.longitude}" %>" alt="Residence Location">

<!-- WhatsApp Link -->
<a href="https://wa.me/<%= @residence.contact_number %>">Contact Us on WhatsApp</a>
<embed src="/agreements/user_agreement.pdf" width="100%" height="600px" />
<% if @residence.user_agreement_file.attached? %>
  <%= link_to "User Agreement", rails_blob_path(@residence.user_agreement_file, disposition: "attachment") %>
<% else %>
  <p>No user agreement file uploaded.</p>
<% end %>

